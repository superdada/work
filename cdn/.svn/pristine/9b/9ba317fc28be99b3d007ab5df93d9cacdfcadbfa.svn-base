#my-login-box{
    margin: 200px auto 0;
    width: 270px;
}
.my-logo{
    padding:  0 auto;
    width: 270px;
    height: 110px;
}
.my-login-info{
    width: 270px;
    height: 30px;
    padding-top:20px; 
}
.my-login-text{
    float: left;
    font-family: '微软雅黑';
    font-size:14px;
    font-weight: bold;
    width:50px;
    color: #5182e4;
    padding-top: 5px;
}
.my-input{
    font-family: '微软雅黑';
    border-style:none;
    float: left;
    box-sizing:border-box;
    width:215px;
    height:28px;
    line-height:28px \0;
    color:#fff;
    font-size:14px;
    font-weight:400;
    background:0 0;
    box-shadow: 0 1px 0 0 rgba(81,130,228,.6);
    z-index:2}
.my-input:focus{
    box-shadow: 0 2px 0 0 #5182e4;
    outline:none;
    border:none;}

.my-btn{
    width:100%;
    text-align:center;
    height:40px;
    line-height:40px;
    display:inline-block;
    color:#fff;
    font-size:14px;
    border-radius:0;
    cursor:pointer;
    background:#5182E4;
    border:0;
    position:relative;
    z-index:999;
    margin-top:30px;
    transition:all .2s ease-in-out;
    font-family: '微软雅黑';font-size:14px}
.my-btn:hover{
    background:rgba(81,130,228,.8);
    transition:all .2s ease-in-out}
